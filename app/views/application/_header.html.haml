<!-- Navigation -->
%nav.navbar.navbar-custom.navbar-fixed-top
  .container
    <!-- Brand and toggle get grouped for better mobile display -->
    .navbar-header.nav-custom
      %ul.nav.navbar-nav
        %li.nav-ele
          = select_tag 'country', options_for_select([['India', 'in'], ['U.S.A', 'us']]), {class: 'selectpicker', id: 'country_select'}
        %li.nav-ele
          = text_field_tag 'q', '',id: 'query', class: 'query', autocomplete: 'off', placeholder: '#hashtags ex: #ruby'
        %li.nav-ele
          = button_tag "Go!", id: 'gobutton'
    <!-- Collect the nav links, forms, and other content for toggling -->
    .collapse.navbar-collapse.navbar-right.navbar-main-collapse
      %ul.nav.navbar-nav
        %li.hidden
          = link_to '', '#page-top'
        %li.page-scroll
          = link_to 'About', '#about'
        %li.page-scroll
          = link_to 'Contact', '#contact'

